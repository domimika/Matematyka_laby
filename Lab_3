# ------------------------------------------------------------------------------
# BINOM
# ------------------------------------------------------------------------------
# 1) 
# pp zakupu napoju: 0,25, n = 8 klientow, pp, x = ze dokladnie 3 kupi 
sum(dbinom(3,5,1/4))
# ------------------------------------------------------------------------------
# 2)
# x = 2 (zapomnij), n = 30 uczniow, pp = 0,1 pp na zapomniecie zadania (sukces)
dbinom(2,30,0.1)
# x > 2 (zapomni więcej niż 2)
sum(dbinom(3:30,30,0.1))
# lub
1 - pbinom(2,30,0.1)
# ------------------------------------------------------------------------------
# 3)
# n = 100 elementow, pp sukcesu (uszkodzenia): 0,015, x = 5:100
sum(dbinom(5:100,100,0.015))
# lub
1 - pbinom(4, 100, 0.015)
# ------------------------------------------------------------------------------
# GEOM
# ------------------------------------------------------------------------------
# 1)
# /n/ - liczba prób/porazek: 1,2,3 (zlapanie przy dokladnie 4 probie)
# /p/ - pp sukcesu: 0.1 (sukces:zlapanie)
dgeom(3, 0.1)
# ------------------------------------------------------------------------------
# 2)
# /n/ - liczba prób/porazek: 6 (po dokladnie 6 nieudanych probach sukces)
# /p/ - pp sukcesu: 0.2 (sukces: trafienie)
dgeom(6, 0.2)
# ------------------------------------------------------------------------------
# 3) 
# /n/ - liczba prób/porazek: 1-9 (9) (w pierwszych 10 probach)
# /p/ - pp sukcesu: 0.02 (sukces: trafienie)
pgeom(9, 1/50)
# ------------------------------------------------------------------------------
# POIS
# ------------------------------------------------------------------------------
# 1) 
# x(d) - dokladnia liczba zdarzen/sukcesow = x = 2
# λ (lambda) - średnia liczba zdarzeń na jednostkę czasu/przestrzeni 
# = 4 zdarzenia na 1h
dpois(2, 4)
# ------------------------------------------------------------------------------
# 2)
# x(d) - dokladnia liczba zdarzen/sukcesow, p bo max 2 czyli x <= 2
# λ (lambda) - średnia liczba zdarzeń na jednostkę czasu/przestrzeni 0,7 * 1 dzien
# wiec 0,7 * 3
ppois(3, 2.1)
# ------------------------------------------------------------------------------
#3) 
# x(d) - liczba zdarzen/sukcesow: x > 8 (wiecej niz 8)
# λ (lambda) - średnia liczba zdarzeń na jednostkę czasu/przestrzeni 
# lambda = 6 * 1 dzien
# P(X<= 8)
ppois(8, lambda = 6)
# P(x > 8) = 1 - P(X<= 8)
1 - ppois(8, 6)
# ------------------------------------------------------------------------------
